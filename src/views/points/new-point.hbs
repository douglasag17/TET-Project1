<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>New Point</h3>
    </div>
    <div class="card-body">
      <form action="/points/new-point" method="POST">
        <div class="form-group">
          <input type="number" name="latitude" class="form-control" placeholder="Latitude" autofocus step="any" />
        </div>
        <div class="form-group">
          <input type="number" name="longitude" class="form-control" placeholder="Longitude" autofocus step="any" />
        </div>
        <div class="pure-form">
          <fieldset>
            <input
              type="button"
              name="btnLocation"
              class="btn btn-primary btn-block"
              value="Get Location">
          </fieldset>
        </div>
        <div class="form-group mt-3">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

